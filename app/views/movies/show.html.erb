<table class="table movie_table">
    <tbody>
        <tr class="active">
            <th>Name</th>
            <th><%= @movie.name %></th>
        </tr>
        <tr class="active">
            <th>Cast</th>
            <th><%= @movie.cast %></th>
        </tr>
        <tr class="active">
            <th>Director</th>
            <th><%= @movie.director %></th>
        </tr>
        <tr class="active">
            <th>Info</th>
            <th><%= @movie.info %></th>
        </tr>
        <tr class="active">
            <th>Release Date</th>
            <th><%= @movie.release_date %></th>
        </tr>
    </tbody>
</table>
<% if signed_in? %>
    <section>
        <%= render 'shared/review_form' %>
    </section>
<% end %>

<% if @movie.reviews.any? %>
  <h3>Reviews (<%= @movie.reviews.count %>)</h3>
  <ol class="review">
    <%= render @movie.reviews %>
  </ol>
<% end %>