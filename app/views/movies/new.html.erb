<% provide(:title, 'Create New Movie') %>
<h1>Enter Movie Details</h1>

<div class="movie_form"> 
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@movie) do |f| %>
      <%= render 'shared/movie_error_messages' %>
      <%= f.label :name %>
 	    <%= f.text_field :name %>

      <%= f.label :cast %>
      <%= f.text_field :cast %>

      <%= f.label :director %>
      <%= f.text_field :director %>

      <%= f.label :info %>
      <%= f.text_area :info %>

      <%= f.label :release_date %>
      <span class="datetime"><%= f.date_select :release_date %></span>

      <%= f.submit "Create Movie", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
</div>